{{! Note this is a handlebars template. Changing values in here requires a grunt rebuild}}
{{! $css helper contract is f: property_name default_val type default_val2 -> string}}
{{! not $css generally the context (for property names) is the uiOptions values see ui/standardUI for implementation}}
{{! update the Browser object is also now part of the context so you can do #if ie6 or something}}

.qui .content {
    color: {{$col '' 'font'}};
    background: {{$col ''}};
}

.qui .lines {
    font-size: {{$css 'font_size' 12}}px;
}

.qui .lines .timestamp {
    display: {{$css 'show_timestamps' 'inline' 'none'}};
}

.qui .lines .highlight1 {
    background: {{$col 'f6ff94'}};
}

.qui .lines .highlight2 {
    background: {{$col 'a4fcca'}};
}

.qui .lines .highlight3 {
    background: {{$col 'fac3d5'}};
}

.qui .lines .mentioned {
    background: {{$col 'e63772'}} !important;
}

.qui .properties {
    background: {{$col 'f2f0ff'}};
    border-top: thin solid {{$col 'b8c5d1'}};
}


.qui .topic {
    color: {{$col '4f4f4f' 'font'}};
    background: {{$col ''}};
    border-bottom: thin dashed {{$col 'c8d2dc'}};
}

{{! tab stuff }}
.qui .outertabbar, .qui .detached-window .header {
    color: {{$col '0d0b0b' 'font'}};
    background: {{$col 'c9def5'}};
    border-bottom: thin solid {{$col '858585'}};
}

.qui .tabbar .tab {
    border: thin solid {{$col 'c8d2dc'}};
}

.qui .tabbar .selected.tab {
    color: {{$col '333333' 'font'}};
}
{{!  tab stuff  }}

{{! irc input stuff }}

.qui .input {
    background: {{$col 'f2f0ff'}};
}

.qui .input div {
    border-top: thin solid {{$col 'c3cee0'}};
}

.qui .input .tt-query, .qui hr.lastpos {
    border: thin solid {{$col 'c3cee0'}};
}

{{! nicklist }}

.qui .nicklist {
    border-left: thin solid {{$col 'c8d2dc'}};
}

.qui .nicklist .user, .qui .nick-menu {
    border-top: thin solid {{$col ''}};
    border-bottom: thin solid {{$col ''}};
}

.qui .nicklist .selected {
    color: {{$col '' 'font'}};
    border-bottom: thin solid {{$col 'c8d2dc'}};
    background: #fff;
}

.qui .nicklist .selected-middle {
    border-top: {{$col 'c8d2dc'}} thin solid;
}

.qui .dropdownmenu, .qui hr.lastpos {
    border: thin solid {{$col 'c8d2dc'}};
    background: {{$col ''}};
}

.qui .dropdownmenu a:hover {
    background: {{$col 'fffe'}};
}