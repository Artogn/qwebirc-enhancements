{{! Note this is a handlebars template. Changing values in here requires a grunt rebuild}}
{{! $css helper contract is f: property_name default_val type default_val2 -> string}}
{{! not $css generally the context (for property names) is the uiOptions values see ui/standardUI for implementation}}
{{! update the Browser object is also now part of the context so you can do #if ie6 or something}}

.channel-name {
    background-color: #FFFFBF;
    border: 1px solid #C8D1DB;
    border-radius: 4px 4px 4px 4px;
    color: #000000;
}


.qui .lines {
    color: black;
    font-size: {{$css 'font_size' 12}}px;
    background: {{$col 'f2f0ff'}};
}

.qui .lines .timestamp {
    display: {{$css 'show_timestamps' 'inline' 'none'}};
}

.lines .highlight1 {
    background-color: {{$col 'f6ff94'}};
}

.lines .highlight2 {
    background-color: {{$col 'A4FCCA'}};
}

.lines .highlight3 {
    background-color: {{$col 'FAC3D5'}};
}

.lines .mentioned {
    background-color: {{$col 'E63772'}} !important;
}

.qui .properties {
    background-color: {{$col 'f2f0ff'}};
    border-top: 1px solid {{$col 'c8d2dc'}};
}


.qui .topic {
    color: gray;
    background-color: {{$col 'f2f0ff'}};
    border-bottom: 1px dashed {{$col 'c8d2dc'}};
}

{{! tab stuff }}
.qui .outertabbar {    
    border-bottom: 1px solid {{$col 'c3cee0'}};
    background: {{$col 'e2ecf9'}};
}


.qui .tabbar {
    color: {{$col '000000'}};
}

.qui .tabbar .tab {
    color: {{$col '000000'}};
    border: 1px solid {{$col 'c8d2dc'}};
}

.qui .tabbar .tab:hover {
    background: {{$col 'ffffff'}};
    border: 1px solid #c8d2dc;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
}

.qui .tabbar .selected.tab {
    background: {{$col 'ffffff'}};
    border: 1px solid {{$col 'c8d2dc'}};
    color: {{$col '333333'}};
}
{{!  tab stuff  }}

{{! irc input stuff }}

.qui .input {
    background-color: {{$col 'f2f0ff'}};
}

.qui .input div {
    border-top: 1px solid {{$col 'c3cee0'}};
}


.qui .input .tt-query {
    border: 1px solid {{$col 'c3cee0'}};
}

.qui .nicklist {
    border-left: 1px solid {{$col 'c8d2dc'}};
    background: {{$col 'f2f0ff'}};
    color: {{$col '000000'}};
}

.qui .nicklist .user, .qui .nick-menu {
    border-top: 1px solid {{$col 'f2f0ff'}};
    border-bottom: 1px solid {{$col 'f2f0ff'}};
}

.qui .nicklist .selected {
    color: black;
    background: white;
    border-bottom: {{$col 'c8d2dc'}} 1px solid;
}

.qui .nicklist .selected-middle {
    border-top: {{$col 'c8d2dc'}} 1px solid;
}

.qui .dropdownmenu {
    border: 1px solid {{$col 'c8d2dc'}};
    background: {{$col 'f2f0ff'}};
}

.qui .dropdownmenu a:hover {
    background: {{$col 'FFFE'}};
}

.qui hr.lastpos {
  border-top: 1px solid {{$col 'C8D2DC'}};
}