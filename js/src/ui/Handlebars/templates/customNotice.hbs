<div class="controls custom-notice" id={{id}}>
    <label class="control-inline">{{lang.USER_NOTICE}}
        <input type="text" data-id="nick" placeholder="{{lang.NICK_PLACEHOLDER}}" value="{{nick}}">
    </label>
    <label class="control-inline">{{lang.MESSAGE_NOTICE}}
        <input type="text" data-id="msg" placeholder="{{lang.MESSAGE_PLACEHOLDER}}" value="{{msg}}">
    </label>
    <label class="checkbox-inline" >{{lang.BEEP}}
        <input type="checkbox" data-id="beep" {{check beep}}>
    </label>
    <label class="checkbox-inline">{{lang.FLASH}}
        <input type="checkbox" data-id="flash" {{check flash}}>
    </label>
    <label class="checkbox-inline" title="{{lang.ESCAPE_HINT}}">{{lang.AUTOESCAPE}}
        <input type="checkbox" data-id="autoescape" {{check autoescape}}>
    </label>
    <input type="button" value="{{lang.DELETE_NOTICE}}" class="remove-notice btn btn-danger btn-smaller">
</div>